program Compras;

uses
  Vcl.Forms,
  MainFrm in 'MainFrm.pas' {frmMain},
  ConexaoDtm in 'fontes\ConexaoDtm.pas' {dmConexao: TDataModule},
  funcoes in 'fontes\funcoes.pas',
  LoginFrm in 'fontes\LoginFrm.pas' {frmLogin};

{$R *.res}

begin
  Application.Initialize;
  Application.MainFormOnTaskbar := True;
  Application.CreateForm(TdmConexao, dmConexao);

  Application.CreateForm(TdmConexao, dmConexao);
  if dmConexao.AbreConexaoDB then
  begin
    UtilDb.LeEmpresa;
    Application.CreateForm(TdmConfigura, dmConfigura);
    Application.CreateForm(TdmVendaNfce, dmVendaNfce);
    TfrmVendaNfce.CriarFormVenda;
    Application.Run;
  end;

  Application.Run;
end.
